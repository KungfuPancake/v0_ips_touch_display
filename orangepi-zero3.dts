/dts-v1/;
/plugin/;

/ {
        compatible = "allwinner,sun50i-h616";

        fragment@0 {
                target-path = "/aliases";
                __overlay__ {
			pio = "/soc/pinctrl@300b000";
                        spi1 = "/soc/spi@5011000";
			i2c3 = "/soc/i2c@5002c00";
                };
        };

	fragment@1 {
		target = <&pio>;
		__overlay__ {
			spi1_cs1_pin: spi1-cs1-pin {
				pins = "PH9";
				function = "spi1";
			};
		};
	};

        fragment@2 {
                target = <&spi1>;
                __overlay__ {
                        #address-cells = <1>;
                        #size-cells = <0>;
                        status = "okay";

                        panel: panel@1 {
                                compatible = "panel-mipi-dbi-spi";
                                reg = <1>;
                                spi-max-frequency = <64000000>;

                                dc-gpios = <&pio 2 7 0>;
                                reset-gpios = <&pio 2 10 0>;
                                write-only;

                                format = "b6x2g6x2r6x2";

                                backlight = <&backlight_gpio>;

                                width-mm = <73>;
                                height-mm = <49>;
		
				pinctrl-names = "default";
				pinctrl-0 = <&spi1_cs1_pin>;

                                panel-timing {
                                        hactive = <480>;
                                        vactive = <320>;
                                        hback-porch = <0>;
                                        vback-porch = <0>;
                                        clock-frequency = <0>;
                                        hfront-porch = <0>;
                                        hsync-len = <0>;
                                        vfront-porch = <0>;
                                        vsync-len = <0>;
                                };
                        };
                };
        };

	fragment@3 {
		target-path = "/";
		__overlay__ {
			backlight_gpio: backlight_gpio {
				compatible = "gpio-backlight";
				gpios = <&pio 7 3 0>;
				default-on;
			};
		};
	};

	fragment@4 {
		target = <&i2c3>;
		__overlay__ {
			#address-cells = <1>;
			#size-cells = <0>;
			status = "okay";

			touch@38 {
				compatible = "focaltech,ft6236";
				status = "okay";
				reg = <0x38>;
				reset-gpios = <&pio 7 2 1>;
				interrupt-parent = <&pio>;
				interrupts = <2 14 2>;
				
				touchscreen-size-x = <320>;
				touchscreen-size-y = <480>;
			};
		};
	};
};
